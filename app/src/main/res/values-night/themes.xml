<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Semar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/brown_500</item>
        <item name="colorOnPrimary">@color/brown_300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <style name="Theme.Semar" parent="Base.Theme.Semar" />

    <!-- Style for SplashScreenActivity -->
    <style name="SplashTheme" parent="Base.Theme.Semar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- Style for MainActivity -->
    <style name="MainTheme" parent="Base.Theme.Semar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="layout">
        <item name="android:background">@color/brown_900</item>
        <item name="android:backgroundTint">@color/brown_900</item>
    </style>

    <style name="layout_card">
        <item name="android:background">@color/brown_500</item>
        <item name="android:backgroundTint">@color/brown_500</item>
    </style>

    <style name="header_home">
        <item name="android:background">@drawable/top_bar_home_bg_dark</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="image_galery">
        <item name="srcCompat">@drawable/ic_gallery_dark</item>
    </style>

    <style name="btn_capture">
        <item name="srcCompat">@drawable/custom_btn_capture_dark</item>
    </style>

    <style name="toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/brown_500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextAppearance">@style/subheader1</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="nav">
        <item name="android:background">@color/brown_500</item>
    </style>

    <style name="hr_line">
        <item name="android:background">@color/white</item>
    </style>

    <style name="layout_wayang_item">
        <item name="android:background">@drawable/card_wayang_bg</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="layout_video_item">
        <item name="android:backgroundTint">@color/brown_500</item>
        <item name="android:background">@drawable/card_video_bg_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="layout_event_item">
        <item name="android:backgroundTint">@color/brown_500</item>
        <item name="android:background">@drawable/card_video_bg_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="round">8dp</item>
    </style>

    <style name="input_text" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/brown_100</item>
        <item name="boxBackgroundColor">@color/brown_300</item>
        <item name="boxStrokeColor">#E4DFDF</item>
        <item name="hintTextColor">@color/brown_100</item>
        <item name="passwordToggleTint">@color/brown_100</item>
        <item name="placeholderTextColor">@color/brown_100</item>
        <item name="startIconTint">@color/brown_100</item>
    </style>

    <style name="btn_goToDetail">
        <item name="android:backgroundTint">@color/orange_500</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleTextAppearance">@style/regular_body</item>
    </style>

    <style name="header" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subheader_ellipses" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="subheader1" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subheader2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subheader2_black" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regular_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanregular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bold_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chip" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/brown_100</item>
    </style>

    <style name="chip_video" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chip_event" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>