<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    style="@style/layout_video_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/iv_video_image"
            android:layout_width="80dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/wayang_video"
            android:scaleType="centerCrop"
            android:background="@drawable/card_video_bg"
            android:clipToOutline="true"
            style="@style/layout_video_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/bold_body"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/video_name"/>

            <TextView
                android:id="@+id/tv_duration_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/chip_video"
                android:layout_gravity="bottom|end"
                android:gravity="bottom|end"
                android:text="@string/video_duration"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>