<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_wayang_item"
    android:id="@+id/item_wayang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="121dp"
        android:orientation="vertical"
        style="@style/layout_wayang_item"
        android:layout_gravity="center">
        
        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="100dp"
            style="@style/layout_wayang_item">

            <ImageView
                android:id="@+id/iv_wayang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="@string/wayang_image"
                android:scaleType="centerCrop"
                android:background="@drawable/card_wayang_bg"
                android:clipToOutline="true"
                style="@style/layout_wayang_item"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_wayang_name"
            style="@style/regular_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/wayang_name"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>