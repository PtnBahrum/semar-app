<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_event"
    android:layout_width="match_parent"
    style="@style/layout_event_item"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="7dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layout_event_item"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iV_event"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_launcher_background"
            android:background="@drawable/card_video_bg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/event_poster"
            style="@style/layout_event_item"/>

        <TextView
            android:id="@+id/tv_name_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/bold_body"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/event_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/brown_100"/>

        <TextView
            android:id="@+id/tv_date_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/chip"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:text="@string/date_event"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>