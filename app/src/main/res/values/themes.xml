<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Semar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Semar" parent="Base.Theme.Semar" />

    <style name="layout">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/brown_500</item>
    </style>

    <style name="header_home">
        <item name="android:background">@drawable/top_bar_home_bg</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextAppearance">@style/subheader1</item>
        <item name="titleTextColor">@color/brown_500</item>
    </style>

    <style name="nav">
        <item name="android:background">@color/white</item>
    </style>

    <style name="hr_line">
        <item name="android:background">@color/brown_100</item>
    </style>

    <style name="layout_wayang_item">
        <item name="android:background">@drawable/card_wayang_bg</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="layout_video_item">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/card_video_bg</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="layout_event_item">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/card_video_bg</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="round">8dp</item>
    </style>

    <style name="header" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/brown_500</item>
    </style>
    <style name="subheader1" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/brown_500</item>
    </style>
    <style name="subheader2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/brown_500</item>
    </style>
    <style name="regular_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanregular</item>
        <item name="android:textColor">@color/brown_900</item>
    </style>
    <style name="bold_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanbold</item>
        <item name="android:textColor">@color/brown_900</item>
    </style>
    <style name="light_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/brown_500</item>
    </style>
    <style name="chip" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/brown_100</item>
    </style>
    <style name="chip_video" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>
    <style name="chip_event" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hanumanlight</item>
        <item name="android:textColor">@color/brown_100</item>
    </style>
</resources>